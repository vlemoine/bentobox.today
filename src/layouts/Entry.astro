---
import Header from "@components/Header.astro";
import Nav from "@components/Nav.astro";

import { Picture } from "@astrojs/image/components";

const { frontmatter, headings, compiledContent } = Astro.props;

const subheadings = headings.filter((h: any) => {
  return h.depth === 2;
});

const lists = compiledContent()
  .split("<ul>\n")
  .map((t: string) => {
    return t.split("</ul>");
  })
  .flat()
  .filter((t: string) => {
    return t.search("<li>") !== -1;
  });
---

<!DOCTYPE html>
<html lang="en-us" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="https://fav.farm/🍱" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} | bentobox.today</title>
  </head>
  <body class="bg-gray-900 text-white h-full flex flex-col">
    <Header />
    <div class="grid grid-cols-[auto_1fr] grow overflow-x-hidden">
      <Nav />
      <main class="entry sm:grid py-4 px-8">
        <h1 id={headings[0].slug}>{headings[0].text}</h1>
        <div class="img">
          <Picture
            widths={[400, 800, 1200]}
            aspectRatio="1:1"
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
            sizes="xs:480px sm:500px md:380px lg:260px xl:320px"
          />
        </div>
        <h2 id={subheadings[0].slug}>{subheadings[0].text}</h2>
        <ul set:html={lists[0]} />
        {
          lists[1] && (
            <>
              <h2 id={subheadings[1].slug}>{subheadings[1].text}</h2>
              <ul set:html={lists[1]} />
            </>
          )
        }
        <!-- <slot /> -->
      </main>
    </div>
  </body>
</html>
<style lang="scss" is:global>
  .entry {
    grid-template-columns: minmax(33vw, calc(100vh - 10rem)) 1fr;
    grid-template-areas:
      "a a"
      "b c"
      "b d"
      "b e"
      "b f"
      "b g";
    grid-column-gap: 2rem;
    h1 {
      @apply font-bold mb-4 text-2xl;
      grid-area: a;
    }
    h2 {
      @apply font-bold mb-2 text-xl;
    }
    p:has(img),
    .img {
      grid-area: b;
    }
    ul {
      @apply mb-8 text-lg;
    }
  }
</style>
